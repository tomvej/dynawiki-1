{
    "extends": [
        "eslint:recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "plugins": [
        "react"
    ],
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "impliedStrict": true
        }
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "rules": {
        /* necessary for React */
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        /* less strict */
        "no-unused-vars": ["error", {"args": "none"}], // allow unused arguments (pattern functions)
        "no-console": ["warn", {"allow": ["warn", "error"]}], // allow warn and error in console
        /* best-practices */
        "curly": "error",
        "no-alert": "error",
        /* styling */
        "no-trailing-spaces": "error",
        "eol-last": "error",
        "jsx-quotes": ["warn", "prefer-double"],
        /* ES6 */
        "no-var" : "error",
        "arrow-body-style": ["warn", "as-needed"]
    }
}
