{
  "name": "dynawiki",
  "version": "0.0.1",
  "description": "Dynamic personal wiki",
  "scripts": {
    "start": "sh -c 'mongodb-rest & npm run devserver & npm run test:watch & wait'",
    "devserver": "webpack-dev-server -d --inline --hot",
    "lint": "eslint src tools",
    "test:base": "mocha --compilers js:babel-register tools/testSetup.js src/**/*.spec.js tools/**/*.spec.js",
    "test": "npm run test:base -- --reporter spec",
    "test:watch": "npm run test:base -- --reporter min --watch",
    "db:clean": "cd tools && node run.js dbinit initial.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomvej/dynawiki.git"
  },
  "author": "tom.vejpustek@centrum.cz",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/tomvej/dynawiki/issues"
  },
  "homepage": "https://github.com/tomvej/dynawiki#readme",
  "dependencies": {
    "immutable": "^3.8.1",
    "isomorphic-fetch": "^2.2.1",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "redux": "^3.6.0",
    "redux-immutable": "^3.0.8",
    "redux-saga": "^0.12.0"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^2.0.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.3.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "memory-fs": "^0.3.0",
    "mocha": "^3.1.0",
    "mongodb-rest": "^0.10.14",
    "npm-check-updates": "^2.8.4",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  }
}
